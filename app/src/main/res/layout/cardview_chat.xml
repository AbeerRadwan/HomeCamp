<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/girl"
        />
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/name"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afnan"
        />
    <LinearLayout
        android:layout_below="@id/name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image"
        android:background="@drawable/leftbubblechat"
        >
        <TextView
           android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello im afnan"
            />
    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@id/image"
        android:id="@+id/image2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/boy"
        />
    <TextView
        android:layout_below="@id/image"
        android:layout_marginTop="16dp"
        android:id="@+id/name2"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohammad"
        />
    <LinearLayout
        android:layout_below="@id/name2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image"
        android:background="@drawable/leftbubblechat"
        >
        <TextView
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello im Mohammad"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_below="@id/image2"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rightbubblechat"
        >
        <TextView
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello im Ahmad"
            />
    </LinearLayout>

    <EditText
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Here"
        android:background="@drawable/edittextbg"
        android:drawableEnd="@drawable/ic_send_black_24dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>